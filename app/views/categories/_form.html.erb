<%= form_with(model: category, remote: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-2">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field mb-2">
    <%= form.label :status, '¿Qué estado quieres?' %>
    <%= form.select :status, {"Privado" => true, "Público" => false} %>
  </div>

  <div class="field mb-2">
    <%= form.label :parent_category %>
    <%= form.select :category_id, @categories.map { |category| [category.name, category.id] }, prompt: "Seleccione una opción" %>
  </div>

  <div class="actions mt-2">
    <%= form.submit class: "btn btn-secondary" %>
  </div>
<% end %>
